<style>
    .chat-box {
        position: fixed;
        bottom: 0;
        right: 0;
        width: 300px;
        border: 1px solid #ccc;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .chat-header {
        display: flex;
        justify-content: space-between;
        padding: 10px;
        background-color: #f1f1f1;
        border-bottom: 1px solid #ccc;
    }

    .chat-messages {
        height: 200px;
        overflow-y: auto;
        padding: 10px;
    }

    .chat-input {
        display: flex;
        padding: 10px;
        border-top: 1px solid #ccc;
    }

        .chat-input input {
            flex: 1;
            padding: 5px;
            border: 1px solid #ccc;
        }

        .chat-input button {
            margin-left: 5px;
        }
</style>

<div id="chatBox" class="chat-box" style="display: none;">
    <div class="chat-header">
        <h4 id="chatDentistName"></h4>
        <button id="closeChatBox">X</button>
    </div>
    <div id="chatMessages" class="chat-messages">
        <!-- Messages will be dynamically added here -->
    </div>
    <div class="chat-input">
        <input type="text" id="chatInputMessage" placeholder="Type your message...">
        <button id="sendChatMessage">Send</button>
    </div>
</div>

