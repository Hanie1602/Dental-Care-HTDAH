@model Dental_Clinic_System.Models.Data.Dentist

@{
	ViewData["Title"] = "DentistBookingCalendar";
	var dentistBooking = ViewBag.dentistBooking as IEnumerable<Dental_Clinic_System.Models.Data.Dentist>;
}

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Dental Care | login</title>
	<link rel="stylesheet"
		  href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<link href="https://fonts.googleapis.com/css2?family=Baloo+Paaji+2:wght@400..800&display=swap"
		  rel="stylesheet" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
		  rel="stylesheet"
		  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
		  crossorigin="anonymous" />
	<link rel="stylesheet" href="~/assets/css/header.css" />
	<link rel="stylesheet" href="~/assets/css/footer.css" />
	<link rel="stylesheet" href="~/assets/css/clinic.css" />
</head>

<div class="clinic">
	<h1 class="clinic__title text-center fw-bold">Chọn Ngày Khám</h1>
	<div class="text-center">
		<img src="~/assets/images/separate.png" alt="" />
	</div>
	<div class="clinic__dentist__container">
		<div class="info">
			<div class="info-style">
				<div class="info-title">Thông tin cơ sở y tế</div>
				<div class="info-body">
					<ul>
						<li>
							<i class="fa-solid fa-hospital"></i>
							<div class="text">
								<span>@Model.Clinic.Name</span>
								<p class="address">
									@Model.Clinic.Address
								</p>
							</div>
						</li>
						<li>
							<i class="fa-solid fa-tooth"></i>
							<div class="text"><span>Chuyên khoa: @Model.DentistSpecialties.FirstOrDefault(ds => ds.SpecialtyID == ViewBag.specialtyID)?.Specialty.Name</span></div>
						</li>
						<li>
							<i class="fa-solid fa-stethoscope"></i>
							<div class="text">
								<span>Bác sĩ: @Model.Account.LastName @Model.Account.FirstName</span>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="booking">
			<div class="booking-style">
				<div class="booking-title">Vui lòng chọn ngày khám</div>
				<div class="booking-calender">
					<div class="year-month__container">
						<div class="year-month__container__style">
							<div>
								<button type="button" disabled>
									<i class="fa-solid fa-circle-left"></i>
								</button>
							</div>
							<div><div class="year-month__time">THÁNG 05-2024</div></div>
							<div>
								<button type="button">
									<i class="fa-solid fa-circle-right"></i>
								</button>
							</div>
						</div>
					</div>
					<div class="week__container">
						<div class="week__cell">CN</div>
						<div class="week__cell">Hai</div>
						<div class="week__cell">Ba</div>
						<div class="week__cell">Tư</div>
						<div class="week__cell">Năm</div>
						<div class="week__cell">Sáu</div>
						<div class="week__cell">Bảy</div>
					</div>
					<div class="date__container">
						<div class="date__container__style">
							<div class="date__cell"><span>1</span></div>
							<div class="date__cell"><span>2</span></div>
							<div class="date__cell"><span>3</span></div>
							<div class="date__cell"><span>4</span></div>
							<div class="date__cell"><span>5</span></div>
							<div class="date__cell"><span>6</span></div>
							<div class="date__cell"><span>7</span></div>
							<div class="date__cell"><span>8</span></div>
							<div class="date__cell"><span>9</span></div>
							<div class="date__cell"><span>10</span></div>
							<div class="date__cell"><span>11</span></div>
							<div class="date__cell"><span>12</span></div>
							<div class="date__cell"><span>13</span></div>
							<div class="date__cell"><span>14</span></div>
							<div class="date__cell"><span>15</span></div>
							<div class="date__cell"><span>16</span></div>
							<div class="date__cell"><span>17</span></div>
							<div class="date__cell"><span>18</span></div>
							<div class="date__cell"><span>19</span></div>
							<div class="date__cell"><span>20</span></div>
							<div class="date__cell"><span>21</span></div>
							<div class="date__cell"><span>22</span></div>
							<div class="date__cell"><span>23</span></div>
							<div class="date__cell"><span>24</span></div>
							<div class="date__cell"><span>25</span></div>
							<div class="date__cell"><span>26</span></div>
							<div class="date__cell"><span>27</span></div>
							<div class="date__cell"><span>28</span></div>
							<div class="date__cell"><span>29</span></div>
							<div class="date__cell available-day"><span>30</span></div>
							<div class="date__cell"><span>31</span></div>
							<div class="date__cell"><span>01</span></div>
							<div class="date__cell available-day"><span>02</span></div>
							<div class="date__cell"><span>03</span></div>
							<div class="date__cell"><span>04</span></div>
						</div>
					</div>
				</div>
			</div>
			<div class="back-btn">
				<a href="/clinic/choosedentist?clinicID=@ViewBag.clinicID&specialtyID=@ViewBag.specialtyID">
					<button type="button">
						Quay lại <i class="fa-solid fa-arrow-rotate-left"></i>
					</button>
				</a>
			</div>
		</div>
	</div>
</div>

