
@{
    ViewData["Title"] = "CreatePatientRecord";
}

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Dental Care | login</title>
	<link rel="stylesheet"
		  href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<link href="https://fonts.googleapis.com/css2?family=Baloo+Paaji+2:wght@400..800&display=swap"
		  rel="stylesheet" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
		  rel="stylesheet"
		  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
		  crossorigin="anonymous" />
	<link rel="stylesheet" href="~/assets/css/header.css" />
	<link rel="stylesheet" href="~/assets/css/footer.css" />
	<link rel="stylesheet" href="~/assets/css/patientrecord.css" />
</head>

<div class="pt__record add">
	<h1 class="pt__record__title text-center fw-bold">Tạo mới hồ sơ</h1>
	<div class="text-center">
		<img src="~/assets/images/separate.png" alt="" />
	</div>
	<!-- ======= STYLE NEW ======= -->
	<div class="pt__record__add__wrapper">
		<div class="style__container add">
			<div class="style__container__add">
				<h2 class="record__add__title text-center">
					Nhập thông tin bệnh nhân
				</h2>
				<div class="record__add__desc">
					Vui lòng cung cấp thông tin chính xác để được phục vụ tốt nhất.
					Trong trường hợp cung cấp sai thông tin bệnh nhân & điện thoại,
					việc xác nhận cuộc hẹn sẽ không hiệu lực trước khi đặt khám.
				</div>
				<div class="record__add__required">
					(*) Thông tin bắt buộc nhập
				</div>
				<!-- ====== FORM ====== -->
				<form method="post" action="" class="record__add__form row">
					<div class="col-md-6">
						<label for="fullname">Họ và tên (có dấu)<sup>*</sup></label><input name="fullname"
																					 id="fullname"
																					 type="text"
																					 placeholder="VÍ DỤ: AN PHÚC HOÀ" />
					</div>
					<div class="col-md-6">
						<label for="dateofbirth">Ngày sinh (năm/tháng/ngày) <sup>*</sup></label>
						<div class="row">
							<div class="col-md-4">
								<select name="dateofbirth" id="dateofbirth">
									<option value="" disabled selected>Năm</option>
									<option value="2000">2000</option>
									<option value="2009">2009</option>
								</select>
							</div>
							<div class="col-md-4">
								<select>
									<option value="" disabled selected>Tháng</option>
									<option value="1">1</option>
								</select>
							</div>
							<div class="col-md-4">
								<select>
									<option value="" disabled selected>Ngày</option>
									<option value="1">1</option>
								</select>
							</div>
						</div>
					</div>
					<div class="col-md-6">
						<label for="phonenumber">Số điện thoại <sup>*</sup></label><input name="phonenumber"
																						  id="phonenumber"
																						  type="text"
																						  placeholder="Vui lòng nhập số điện thoại" />
					</div>
					<div class="col-md-6">
						<label for="gender">Giới tính<sup>*</sup></label><select name="gender" id="gender">
							<option value="" disabled selected>Chọn giới tính</option>
							<option value="male">Nam</option>
							<option value="female">Nữ</option>
						</select>
					</div>
					<div class="col-md-6">
						<label for="job">Nghề nghiệp</label><select name="job" id="job">
							<option value="" disabled selected>Chọn nghề nghiệp</option>
							<option value="student">Học sinh</option>
						</select>
					</div>
					<div class="col-md-6">
						<label for="identityNumber">Số CMND/CCCD</label><input type="text"
																   name="identityNumber"
																   id="identityNumber" />
					</div>
					<div class="col-md-6">
						<label for="email">Địa chỉ Email</label><input name="email"
													 id="email"
													 type="email"
													 placeholder="Nhập địa chỉ email để nhận phiếu khám" />
					</div>
					<div class="col-md-6">
						<label for="province">Tỉnh / Thành <sup>*</sup></label><select name="province" id="province">
							<option value="" disabled selected>Chọn tỉnh thành</option>
							<option value=""></option>
						</select>
					</div>
					<div class="col-md-6">
						<label for="district">Quận / Huyện <sup>*</sup></label><select name="district" id="district">
							<option value="" disabled selected>Chọn quận huyện</option>
							<option value=""></option>
						</select>
					</div>
					<div class="col-md-6">
						<label for="ward">Phường / Xã <sup>*</sup></label><select name="ward" id="ward">
							<option value="" disabled selected>Chọn phường xã</option>
							<option value=""></option>
						</select>
					</div>
					<div class="col-md-12">
						<label for="address">Địa chỉ <sup>*</sup></label>
						<input name="address"
							   id="address"
							   type="text"
							   placeholder="Nhập địa chỉ" />
					</div>

					<!-- NHỮNG DÒNG NÀY SẼ ĐƯỢC THỂ HIỆN RA NGOÀI NẾU BỆNH NHÂN CÓ ĐỘ TUỔI NHỎ HƠN 16 TUỔI -->
					<div id="age__check" class="row">
						<div class="record__add__form__divider col-md-12"></div>
						<h2 class="family__member__add__title col-md-12 text-center">
							Nhập thông tin nhân thân
						</h2>
						<div class="col-md-6">
							<label for="fmfullname">HỌ VÀ TÊN NGƯỜI THÂN (CÓ DẤU)<sup>*</sup></label><input name="fmfullname"
																					   id="fmfullname"
																					   type="text"
																					   placeholder="Nhập họ tên người thân" />
						</div>
						<div class="col-md-6">
							<label for="relationship">Quan hệ với bệnh nhân<sup>*</sup></label>
							<select name="relationship" id="relationship">
								<option value="" disabled selected>Chọn quan hệ</option>
								<option value="dad">Cha</option>
								<option value="mom">Mẹ</option>
								<option value="grandpa">Ông</option>
								<option value="grandma">Bà</option>
								<option value="brother">Anh</option>
								<option value="sister">Chị</option>
							</select>
						</div>
						<div class="col-md-6">
							<label for="fmphonenumber">Số điện thoại<sup>*</sup></label><input name="fmphonenumber"
																		  id="fmphonenumber"
																		  type="text"
																		  placeholder="Vui lòng nhập số điện thoại" />
						</div>
						<div class="col-md-6">
							<label for="fmemail"> Địa chỉ Email<sup>*</sup></label><input name="fmemail"
																						  id="fmemail"
																						  type="text"
																						  placeholder="Nhập địa chỉ email để nhận phiếu khám" />
						</div>
					</div>

					<!-- BUTTON -->
					<!--  CHỖ NÀY CAANF ĐỔI THÀNH SUBMIT CHO BUTTON CÓ CLASS add-record-btn -->
					<div class="btn-wrapper add__record">
						<button type="reset" class="reset-btn">Nhập lại</button>
						<a href="~/patientrecordchoose.html">
							<button type="button" class="add-record-btn">
								Tạo mới
							</button>
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
		crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/53f42380b0.js"
		crossorigin="anonymous"></script>
<!-- Kiểm tra xem độ tuổi có lớn hơn 16 hay không -->
<script>
	document
		.getElementById("dateofbirth")
		.addEventListener("change", function () {
			var selectedYear = this.value;
			var currentYear = new Date().getFullYear();
			var age = currentYear - selectedYear;
			var ageCheckDiv = document.getElementById("age__check");

			if (age < 16) {
				ageCheckDiv.style.display = "inherit";
			} else {
				ageCheckDiv.style.display = "none";
			}
		});
</script>

