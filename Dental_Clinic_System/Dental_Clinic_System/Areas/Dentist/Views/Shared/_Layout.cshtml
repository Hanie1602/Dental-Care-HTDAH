@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="~/assets/css/contentDash.css" />
<body>
    @if (ViewBag.message == "success")
    {
        <script>
            window.addEventListener('DOMContentLoaded', (event) => {
                showSuccessToasts('Cập Nhật Thay Đổi Thành Công!');
            });
        </script>
    }
    else if ( ViewBag.message != null)
    {
        <script>
            window.addEventListener('DOMContentLoaded', (event) => {
                showErrorToasts('@ViewBag.message');
            });
        </script>
    }


	<div class="dashboard__container d-flex">
		@* <div id="toast"></div> *@
		@Html.Partial("_DentistSidebar")
		<div class="container-fluid" style="width: 85%; padding: 0">
			@Html.Partial("_DentistAvatar")
			@RenderBody()
            <div id="toasts"></div>
		</div>
	</div>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <script src="~/assets/js/toastmessage.js"></script>
</body>
</html>
