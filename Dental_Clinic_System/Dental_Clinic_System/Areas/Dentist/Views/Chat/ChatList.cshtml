@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Danh sách chat";
    var chats = ViewBag.ChatList;
}

<head>
    <link rel="stylesheet" href="~/assets/css/sidebar.css" />
    <link rel="stylesheet" href="~/assets/css/headerAd.css" />
    <link rel="stylesheet" href="~/assets/css/dentistpatients.css" />
    <link rel="stylesheet" href="~/assets/css/specialtydash.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>

        a {
            text-decoration: none !important;
        }

        sup {
            font-size: 18px;
            color: red;
        }

        .chat-list {
            display: flex;
            flex-direction: column;
            width: 300px;
            margin: auto;
            border: 1px solid #ccc;
            height: 80vh;
            overflow-y: scroll;
            padding: 5px;
        }

        .chat-item {
            padding: 10px;
            border-bottom: 1px solid #ccc;
            cursor: pointer;
        }

            .chat-item:hover {
                background-color: #f1f1f1;
            }
    </style>
</head>

<body>
    <div class="chat-list" id="chatList">
        @foreach (var chat in chats)
        {
            <a href="@Url.Action("ChatDetail", "Chat", new { area = "Dentist", patientID = @chat.SenderId })">
                <div class="chat-item">
                    <strong>@chat.ReceiverName</strong>
                    <p>@chat.Content</p>
                    <small>@chat.Timestamp</small>
                </div>
            </a>
        }
    </div>
</body>
