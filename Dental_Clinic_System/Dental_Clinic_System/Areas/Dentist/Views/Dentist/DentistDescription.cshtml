@model Dental_Clinic_System.Models.Data.Dentist
@{
	ViewData["Title"] = "DentistDescription";
}

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Mô Tả Nha Sĩ</title>
	<link rel="stylesheet"
		  href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<link href="https://fonts.googleapis.com/css2?family=Baloo+Paaji+2:wght@400..800&display=swap"
		  rel="stylesheet" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
		  rel="stylesheet"
		  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
		  crossorigin="anonymous" />
	<link rel="stylesheet"
		  href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
	<link rel="stylesheet" href="~/assets/css/sidebar.css" />
	<link rel="stylesheet" href="~/assets/css/headerAd.css" />
	<link rel="stylesheet" href="~/assets/css/contentDash.css" />
</head>

<div class="work__schedule" style="padding: 20px">
	<form asp-action="senddentistdescription" method="post" >
	<div id="container">
		<textarea id="editor" name="content"></textarea>
	</div>
	<div style="margin-top: 1%;">
		<button type="submit" class="btn btn-primary" style="font-size: 15px;">Xác Nhận</button>
	</div>
	</form>
</div>
@if (TempData["descriptionStatus"] == "success")
{
	<div>
		<h2 class="text text-success">Thay đổi thành công<h3/>
		<h3>Mô tả của bạn là: <p>@Html.Raw(Model.Description)</p></h3>
	</div>
}


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
		crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://kit.fontawesome.com/53f42380b0.js"
		crossorigin="anonymous"></script>
<script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/super-build/ckeditor.js"></script>
<script src="~/assets/js/richtexteditor.js"></script>

