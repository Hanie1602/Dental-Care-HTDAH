@{
	ViewData["Title"] = "Đăng nhập - Quản Lý";
	Layout = null;
}
<!DOCTYPE html>

<html>
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet"
		  href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<link href="https://fonts.googleapis.com/css2?family=Baloo+Paaji+2:wght@400..800&display=swap"
		  rel="stylesheet" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
		  rel="stylesheet"
		  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
		  crossorigin="anonymous" />
	<link rel="stylesheet"
		  href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />

	<link rel="stylesheet"
		  href="https://kit.fontawesome.com/53f42380b0.css"
		  crossorigin="anonymous">

	<link rel="shortcut icon" type="image/x-icon" href="~/assets/images/dentalClinicLogoOfficial.png" />
	<link rel="stylesheet" href="~/assets/css/contentDash.css" />

	<link rel="stylesheet" href="~/assets/css/login_dentist.css">
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
	@if (ViewBag.ToastMessageSuccess != null)
	{
		<script>
			window.addEventListener('DOMContentLoaded', (event) => {
				showSuccessToasts('@ViewBag.ToastMessageSuccess');
			});
		</script>
	}
	else if (ViewBag.ToastFailMessage != null)
	{
		<script>
			window.addEventListener('DOMContentLoaded', (event) => {
				showErrorToasts('@ViewBag.ToasFailtMessage');
			});
		</script>
	}
	else if (TempData["ToastMessageSuccessTempData"] != null)
	{
		<script>
			window.addEventListener('DOMContentLoaded', (event) => {
				showSuccessToasts('@TempData["ToastMessageSuccessTempData"]');
			});
		</script>
	}
	else if (TempData["ToastMessageFailTempData"] != null)
	{
		<script>
			window.addEventListener('DOMContentLoaded', (event) => {
				showErrorToasts('@TempData["ToastMessageFailTempData"]');
			});
		</script>
	}
	else if (TempData["ToastMessageTempData"] != null)
	{
		<script>
			window.addEventListener('DOMContentLoaded', (event) => {
				showErrorToasts('@TempData["ToastMessageTempData"]');
			});
		</script>
	}
	<div class="form">
		<div class="leftside">
			<img src="~/assets/images/login-dentist-illus.png" style="position:relative;right: 93%;">
			<h1>CHÀO MỪNG QUẢN LÝ PHÒNG KHÁM!</h1>
			<img src="~/assets/images/dentist-login-illus.png" style="position:relative;left: 65%;">
		</div>
		<div class="rightside">
			<form asp-controller="ManagerAccount" asp-action="Login" method="post">
				<div class="input-container">
					<img src="~/assets/images/DentalCare.png" style="position:relative;left: 33px;"><br />
					<div class="input">
						<i class="fa fa-user"></i>
						<input type="text" placeholder="Tên Đăng Nhập" name="username" required />
					</div>
					<div class="input">
						<i class="fa fa-lock"></i>
						<input type="password" placeholder="Mật Khẩu" name="password" required />
					</div>
					<input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
					<input type="submit" class="login" value="Đăng Nhập" />
					<p style="font-size: 15px;"><sup>**Quên Mật Khẩu Vui Lòng Liên Hệ Admin. Xin Cảm Ơn!</sup></p>
				</div>
			</form>
		</div>
	</div>

	<div id="toasts"></div>
	<script src="~/assets/js/toastmessage.js"></script>
</body>
</html>