@model Dental_Clinic_System.Models.Data.Dentist

@{
	ViewData["Title"] = "Details";
	Layout = "_LayoutManager";
}
@section Styles {
    <style>
        .sidebar .nav-item a.Dich_vu_kham {
            color: #fff;
            background: #4880ff;
        }

        .chinhle {
            width: 1000px;
        }

        .button {
            padding: 6px 20px;
        }

        .manager__management__header .action-btn .add__new1 {
            background: #dc3545;
            border: none;
            outline: none;
            color: white;
            font-weight: 600;
            padding: 6px 20px;
            border-radius: 6px;
            cursor: pointer;
        }

            .manager__management__header .action-btn .add__new1:hover {
                background: #bb2d3b;
            }
    </style>
}


<!--header -->
<div class="manager__management__header">
    <div class="title">Chi tiết nha sĩ</div>
</div>
<!--body -->
<hr /> @* Đường phân cách *@
<dl class="row" style="padding-left: 100px; font-size: 2rem">
    <dt class="col-sm-2">Họ tên</dt>
    <dd class="col-sm-10">@Model.Account.LastName @Model.Account.FirstName</dd>

    <dt class="col-sm-2">Giới tính</dt>
    <dd class="col-sm-10">@Model.Account.Gender</dd>

    <dt class="col-sm-2">Ngày sinh</dt>
    <dd class="col-sm-10">@Model.Account.DateOfBirth?.ToString("dd/MM/yyyy")</dd>

    <dt class="col-sm-2">Địa chỉ</dt>
    <dd class="col-sm-10">@ViewBag.Address @ViewBag.Ward  @ViewBag.District @ViewBag.Province </dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Account.Email</dd>

    <dt class="col-sm-2">Số điện thoại</dt>
    <dd class="col-sm-10">@Model.Account.PhoneNumber</dd>

    <dt class="col-sm-2">Bằng cấp</dt>
    <dd class="col-sm-10">@Model.Degree.Name</dd>

    <dt class="col-sm-2">Mô tả</dt>
    <dd class="col-sm-10">@Html.Raw(@Model.Description)</dd>
</dl>

<hr />
<div class="manager__management__header">
    <h1></h1>
    <div class="action-btn">

        <a asp-action="Index">Back to List</a>
        |
        <a asp-action="Edit" asp-route-id="@Model.ID">
            <button class="add__new">
                Chỉnh sửa
            </button>
        </a>
        <a asp-action="Delete" asp-route-id="@Model.ID">
            <button class="add__new1">
                Xóa
            </button>
        </a>
    </div>
</div>
