@model IEnumerable<Dental_Clinic_System.Models.Data.Dentist>

@{
	ViewData["Title"] = "Quản lý nha sĩ";
	Layout = "_LayoutManager";
}
@section Styles {
    <style>
        .form-container {
            display: flex;
            gap: 5px; /* Khoảng cách giữa các form */
        }
		.sidebar .nav-item a.Quan_ly_nha_si {
			color: #fff;
			background: #4880ff;
		}
    </style>
}

	<!-- account management header -->
	<div class="manager__management__header">
		<div class="title">Quản lý nha sĩ</div>
		<div class="action-btn">
			<form asp-action="Search" asp-controller="Dentist">
			<div class="search__bar">
				<input type="search" placeholder="Tìm kiếm ..." name="keyword"/>
			</div>
			</form>
			<form asp-action="Create">
			<button type="button"
					data-bs-toggle="modal"
					data-bs-target="#myModal"
					class="add__new">
				+ New
			</button>
			</form>
		</div>
	</div>
	<!-- Modal For Add new User -->
	<div class="modal fade"
		 id="myModal"
		 tabindex="-1"
		 aria-labelledby="mainTitle"
		 aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered form-modal-styles">
			<form action="" method="POST" class="modal-content">
				<div class="modal-header">
					<h1 class="modal-title fs-10" id="mainTitle">
						Thêm mới nha sĩ
					</h1>
					<button type="button"
							class="btn-close"
							data-bs-dismiss="modal"
							aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="user-name modal-body-card">
						<label for="dentName">Tên nha sĩ</label><input type="text" name="dentName" id="dentName" />
					</div>
					<div class="user-tel modal-body-card">
						<label for="dentGender">Giới tính</label>
						<select name="dentGender" id="dentGender">
							<option value="" disabled selected>
								-- Vui lòng chọn giới tính --
							</option>
							<option value="male">Nam</option>
							<option value="female">Nữ</option>
						</select>
					</div>
					<div class="user-mail modal-body-card">
						<label for="dentMail">Email</label><input type="email" name="dentMail" id="dentMail" />
					</div>
					<div class="user-birth modal-body-card">
						<label for="dentBirth">Ngày sinh</label><input type="date" name="dentBirth" id="dentBirth" />
					</div>
					<div class="user-pic modal-body-card">
						<label for="dentPic">Ảnh đại diện</label><input type="file" name="dentPic" id="dentPic" />
					</div>
					<div class="user-address modal-body-card">
						<label for="addrSpecialty">Địa chỉ</label><input type="text"
															 name="addrSpecialty"
															 id="addrSpecialty" />
					</div>
				</div>
				<div class="modal-footer">
					<button type="button"
							class="close-btn btn"
							data-bs-dismiss="modal">
						Close
					</button>
					<button type="submit" class="submit-btn btn">
						Save changes
					</button>
				</div>
			</form>
		</div>
	</div>
	<!-- Table -->
	<table class="table table-striped mt-5" style="font-size: 1.6rem">
		<thead>
			<tr>
				<th class="text-center">STT</th>
				<th class="text-center">Mã số nha sĩ</th>
				<th>Tên nha sĩ</th>
				<th>Giới tính</th>
				<th>Email</th>
				<th>Số điện thoại</th>
				<th>Địa chỉ</th>
				<th>Hành động</th>
			</tr>
		</thead>
		<tbody id="myTableBody">
			@{
				int index = 0;
			}
			@foreach (var item in Model)
			{
				<tr style="vertical-align: middle">
					<td class="text-center">
						@(++index)
					</td>
					<td class="text-center">
						@item.ID
					</td>
					<td>
						<img src="@item.Account.Image" alt="" />
						<span>
							<a asp-action="Details" asp-route-id="@item.ID">@item.Account.LastName @item.Account.FirstName</a>
						</span>
					</td>
					<td>
						@item.Account.Gender
					</td>
					<td>
						@item.Account.Email
					</td>
					<td>
						@item.Account.PhoneNumber
					</td>
					<td>
						@item.Account.Province
					</td>
					<td class="form-container">
						<form asp-action="Edit" asp-route-id="@item.ID">
							<button type="submit" >
								<i class="bx bxs-edit"></i>
							</button>
						</form>

						<form asp-action="Delete" asp-route-id="@item.ID">
							<button type="submit">
								<i class="bx bxs-trash"></i
							</button>
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<!-- ========== PAGINATION  ========== -->
	<ul id="pagination" class="pagination">
	</ul>


